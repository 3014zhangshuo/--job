<div class="row">
<div class="col-md-4 col-md-offset-4">
    <h2>修改职位</h2>

    <hr>
    <%= simple_form_for [:company,@work] do |f| %>
    <div class="form-group">
        <%= f.input :title, input_html: { class: "form-control"} %>
        <%= f.input :description, inpuut_html: { class: "form-control"} %>
        <%= f.input :wage_lower_bound, :label => "薪资下限" %>
        <%= f.input :wage_upper_bound, :label => "薪资上限" %>
        <%= f.input :contact_email %>
        <%= f.input :is_hidden %>
    </div>
    <%= f.submit "Sumbit", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
    <% end %>
</div>
</div>
