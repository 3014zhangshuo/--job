
<div class="container">
    <div class="row">
        <div class="col-md-12">

   <table class="table table-hover">
     <thead>
       <tr>
         <td>编号</td>
         <td>公司名称</td>
         <td>申请人</td>
       </tr>
     </thead>
     <tbody>
       <% @applies.each do |apply| %>
         <tr>
           <td><%= link_to apply.id, admin_apply_path(apply) %></td>
           <td><%= apply.name %></td>
           <td><%= apply.user.email %></td>
           <% if apply.is_pass == false %>
              <td>
                <% if apply.aasm_state == "apply_sended" %>
                <%= link_to("审核中", passing_admin_apply_path(apply), :method => :post, :class => "btn btn-xs btn-default") %>
                <% elsif apply.aasm_state == "apply_passing" %>
                <%= link_to("通过审核", application_admin_apply_path(apply), :method => :post, :class => "btn btn-xs btn-default") %>
                <%= link_to("未通过审核", failed_admin_apply_path(apply), :method => :post, :class => "btn btn-xs btn-default") %>
                <% end %>
              </td>
            <% end %>
         </tr>
       <% end %>
     </tbody>
   </table>
 </div>
</div>
</div>
